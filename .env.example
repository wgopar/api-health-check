# Only PRIVATE_KEY is required to launch the agent; everything else falls back to defaults.

# Agent HTTP configuration
# Optional. Port that Bun will listen on locally.
PORT=8787
# Optional. Base URL surfaced in the agent manifest for absolute links.

# ERC-8004 Trust Interactions
AGENT_DOMAIN=https://localhost:8787.com # In futurte add basepath to identify which agent it is. agent metadata will be added as   
CHAIN_ID=84532 # Base Sepolia
RPC_URL=xx
NETWORK=xx
REGISTER_IDENTITY=false # skip agent identity registration

# Optional unless monetization is enabled. Facilitator API base URL.
FACILITATOR_URL=xxx

# Optional. Set to true to enable x402 payments (defaults to false when omitted).
AGENT_BILLING_ENABLED=false

# Address that receives x402 payments.
PAY_TO=xxx

# Default price (in base units) when no entrypoint price is set.
DEFAULT_PRICE=1000

#### Secrets
# Required. Used to sign payment requests with the agent wallet.
PRIVATE_KEY=xxx